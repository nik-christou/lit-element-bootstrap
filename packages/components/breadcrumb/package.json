{
  "name": "@lit-element-bootstrap/breadcrumb",
  "version": "1.0.1",
  "description": "Bootstrap v4.3.1 breadcrumb component in LitElement",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "author": "Nikolas Christou",
  "homepage": "https://github.com/nik-christou/lit-element-bootstrap",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/lit-element-bootstrap"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts",
    "global.d.ts",
    "bs-*.js",
    "bs-*.d.ts",
    "css/*.js",
    "css/*.d.ts",
    "custom-elements.json"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "npm run tsc:build; npm run wca-analyze:json",
    "tsc:build": "tsc -p tsconfig.json",
    "serve:demo": "es-dev-server --node-resolve --app-index demo.html --preserve-symlinks",
    "lit-analyze": "lit-analyzer bs-*.js css/*.js --failFast",
    "wca-analyze:json": "wca analyze . --outFile custom-elements.json",
    "lint:prettier": "prettier \"./**/*.js\" --tab-width 4 --list-different",
    "format:prettier": "prettier \"./**/*.js\" --tab-width 4 --write",
    "test": "karma start",
    "test:coverage": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:watch:coverage": "karma start --auto-watch=true --single-run=false --coverage"
  },
  "dependencies": {
    "lit-element": "^2.2.1",
    "lit-html" : "^1.1.2"
  },
  "devDependencies": {
    "@lit-element-bootstrap/content": "^1.0.0-alpha.3",
    "@lit-element-bootstrap/theme": "^1.0.0-alpha.2",
    "@open-wc/karma-esm": "^2.9.8",
    "@open-wc/prettier-config": "^0.1.12",
    "@open-wc/testing": "^2.3.9",
    "axe-core": "^3.4.0",
    "chai": "^4.2.0",
    "es-dev-server": "^1.23.1",
    "eslint": "^6.6.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "lit-analyzer": "^1.1.9",
    "sinon": "^7.5.0",
    "typescript": "^3.7.2",
    "web-component-analyzer": "^0.1.20"
  }
}
