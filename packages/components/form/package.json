{
  "name": "@lit-element-bootstrap/form",
  "version": "1.0.0-alpha.4",
  "description": "Bootstrap v4.1.3 form components in LitElement",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "author": "Nikolas Christou",
  "homepage": "https://github.com/nik-christou/lit-element-bootstrap",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/lit-element-bootstrap"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts",
    "global.d.ts",
    "bs-*.js",
    "bs-*.d.ts",
    "css/*.js",
    "css/*.d.ts",
    "custom-elements.json"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "npm run wca-analyze:json",
    "serve:demo": "es-dev-server --node-resolve --app-index demo.html --preserve-symlinks",
    "lit-analyze": "lit-analyzer bs-*.js css/*.js --failFast",
    "wca-analyze:json": "wca analyze . --outFile custom-elements.json",
    "lint:prettier": "prettier \"./**/*.js\" --tab-width 4 --list-different",
    "format:prettier": "prettier \"./**/*.js\" --tab-width 4 --write",
    "test": "karma start",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:compatibility": "karma start --compatibility all --coverage",
    "test:compatibility:watch": "karma start --compatibility all --auto-watch=true --single-run=false"
  },
  "dependencies": {
    "@lit-element-bootstrap/content": "^1.0.0-alpha.3",
    "@lit-element-bootstrap/layout": "^1.0.0-alpha.4",
    "@lit-element-bootstrap/utilities": "^1.0.0-alpha.4",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@lit-element-bootstrap/button": "^1.0.0-alpha.7",
    "@lit-element-bootstrap/theme": "^1.0.0-alpha.2",
    "@open-wc/karma-esm": "^2.9.8",
    "@open-wc/testing": "^2.3.9",
    "@open-wc/testing-karma": "^3.1.54",
    "es-dev-server": "^1.23.1",
    "deepmerge": "^4.2.2",
    "karma": "^4.4.1",
    "lit-analyzer": "^1.1.9",
    "sinon": "^7.5.0",
    "web-component-analyzer": "^0.1.20"
  }
}
