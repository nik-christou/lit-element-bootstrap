{
  "name": "@lit-element-bootstrap/modal",
  "version": "1.0.0-alpha.7",
  "description": "Bootstrap v4.1.3 modal component in LitElement",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "author": "Nikolas Christou",
  "homepage": "https://github.com/nik-christou/lit-element-bootstrap",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/lit-element-bootstrap"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts",
    "global.d.ts",
    "bs-*.js",
    "bs-*.d.ts",
    "css/*.js",
    "css/*.d.ts",
    "custom-elements.json"
  ],
  "scripts": {
    "prepack": "yarn build",
    "build": "npm run wca-analyze:json",
    "lit-analyze": "lit-analyzer bs-*.js css/*.js --failFast",
    "wca-analyze:json": "wca analyze . --outFile custom-elements.json",
    "lint:prettier": "prettier \"./**/*.js\" --tab-width 4 --list-different",
    "format:prettier": "prettier \"./**/*.js\" --tab-width 4 --write",
    "test": "karma start",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:legacy": "karma start --compatibility all --coverage",
    "test:legacy:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --compatibility all --coverage"
  },
  "dependencies": {
    "@lit-element-bootstrap/button": "^1.0.0-alpha.7",
    "@lit-element-bootstrap/content": "^1.0.0-alpha.3",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.4.1",
    "@open-wc/testing-karma": "^3.2.6",
    "@open-wc/testing-karma-bs": "^1.3.6",
    "@open-wc/prettier-config": "^0.1.12",
    "eslint": "^6.6.0",
    "lit-analyzer": "^1.1.9",
    "karma": "^4.4.1",
    "sinon": "^7.5.0",
    "web-component-analyzer": "^0.1.21"
  }
}
