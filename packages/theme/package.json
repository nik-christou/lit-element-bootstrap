{
  "name": "@lit-element-bootstrap/theme",
  "version": "1.0.0-alpha.2",
  "description": "Bootstrap v4.1.3 theme element in LitElement",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "author": "Nikolas Christou",
  "homepage": "https://github.com/nik-christou/lit-element-bootstrap",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/lit-element-bootstrap"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "global.d.ts",
    "bs-*.js",
    "bs-*.d.ts",
    "custom-elements.json",
    "default-theme-css.js"
  ],
  "dependencies": {
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@open-wc/prettier-config": "^0.1.12",
    "eslint": "^6.6.0",
    "lit-analyzer": "^1.1.9",
    "web-component-analyzer": "^0.1.21"
  },
  "scripts": {
    "prepack": "yarn build",
    "build": "npm run wca-analyze:json",
    "lit-analyze": "lit-analyzer *.js --failFast",
    "wca-analyze:json": "wca analyze . --outFile custom-elements.json",
    "lint:prettier": "prettier \"./**/*.js\" --tab-width 4 --list-different",
    "format:prettier": "prettier \"./**/*.js\" --tab-width 4 --write"
  }
}
